/*注意设置顶层元素的宽高*/
@import "../common/lib/weui.wxss";

page,view {
  width: 100%;
  height: 100%;
}

/*canvas占屏幕一半高度*/
canvas {
  border: 1px solid #d3d3d3;
  background-color: #f1f1f1;
  border-radius: 5px;
  width:100%;
  height:50%;
}

/*写死button的上边距，反正就一个button*/
#flyButton {
  margin-top: 50px;
  padding: 15px;
  height: 70px;
  border-radius: 10px;
  width: 60%;
}

.smaller-button{
  margin-top: 20px;
  margin-left: 20%;
  margin-right: 20%;
  padding: 15px;
  height: 40px;
  border-radius: 10px;
  width: 60%;
}

.text-game{
   color:#808080;
font-size: 32rpx;
text-align: center;
}
