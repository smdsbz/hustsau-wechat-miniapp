<!-- client/page/game/leaderboards/leaderboards.wxml -->
<view class="page">
    <view class="page__hd">
        <view class="page__title">排行榜</view>
    </view>
    <view class="page__bd">
        <view class="weui-cells" wx:for="{{ player }}" wx:for-item="player" wx:for-index="i" wx:key="_id">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <p>{{ player["name"] }}</p>
                </view>
                <view class="weui-cell__ft">{{ player["score"] }}</view>
            </view>
        </view>
    </view>
</view>